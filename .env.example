# Power Platform Environment Configuration
# Copy this file to .env and fill in your environment URLs
# DO NOT commit .env file to git (already in .gitignore)

# Development Environment
DEV_ENV_URL=https://org-dev.crm4.dynamics.com
DEV_ENV_NAME=Development

# Test/UAT Environment
TEST_ENV_URL=https://org-test.crm4.dynamics.com
TEST_ENV_NAME=Test

# Production Environment
PROD_ENV_URL=https://org-prod.crm4.dynamics.com
PROD_ENV_NAME=Production

# Solution Configuration
SOLUTION_NAME=YourSolutionName
SOLUTION_DISPLAY_NAME=Your Solution Display Name
SOLUTION_VERSION=1.0.0.0

# Service Principal for CI/CD (optional)
# Register App in Azure AD: https://learn.microsoft.com/power-platform/admin/create-service-principal
APP_ID=00000000-0000-0000-0000-000000000000
TENANT_ID=00000000-0000-0000-0000-000000000000
# CLIENT_SECRET=<store in Azure DevOps/GitHub Secrets, never commit!>

# Paths
EXPORT_PATH=./exports
SOURCE_PATH=./src
BACKUP_PATH=./backups
